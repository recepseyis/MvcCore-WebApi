@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />
@if (ViewBag.error != null)
{
<div class="alert alert-danger">ViewBag.error</div>
}
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <form asp-route-id="@item.Id" method="post" asp-action="RoleDelete">
                    <button type="submit" class="btn btn-success">Sil</button>
                </form>
            </td>
            <td><a asp-action="RoleUpdate" class="btn btn-info" asp-route-id="@item.Id">Güncelle</a></td>
        </tr>
    }
</table>
<a asp-action="RoleCreate" class="btn btn-info">Role Oluştur</a>


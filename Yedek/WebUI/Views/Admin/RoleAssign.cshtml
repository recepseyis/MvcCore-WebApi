@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>@ViewBag.username'Kullanıcıya Rol Atama()</h3>
<hr />
<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].ischecked" type="checkbox" class="form-check-input" />
            <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>
            <input asp-for="@Model[i].RoleName" type="hidden" />
            <input asp-for="@Model[i].RoleId" type="hidden" />
        </div>
    }
    <input class="btn btn-success" type="submit" value="Rol Ata" />
</form>